<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="25dp">

    <RelativeLayout
        android:id="@+id/rlMyMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="65dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCoverMusic"
                android:layout_width="87dp"
                android:layout_height="87dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/ivCoverMusic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvMusicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cvCoverMusic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="13dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16dp"
                android:text="Judul"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cvCoverMusic"
                android:layout_below="@+id/tvMusicName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="13dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_singer"/>

                <TextView
                    android:id="@+id/tvSingerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="13dp"
                    android:text="Singer Name"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivthreeDot"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/three_dote"/>

    </RelativeLayout>

</LinearLayout>